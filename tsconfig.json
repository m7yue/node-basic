{
  "compilerOptions": {
    "target": "ES5",

    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "resolveJsonModule": true,

    "allowJs": true,

    "declaration": false,
    "outDir": "./lib",

    "isolatedModules": true,
    "esModuleInterop": true,

    "strict": true,

    "paths": {
      "@src/*": ["src/*"],
    }
  }
}